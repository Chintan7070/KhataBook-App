<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:add="http://schemas.android.com/apk/res-auto"
    android:background="#ECEDF1"
    android:orientation="vertical"
    tools:context=".AddCustomer"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:verticalScrollbarPosition="defaultPosition">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <TextView
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:textStyle="bold|normal"
        android:textColor="@color/white"
        android:background="#0648AE"
        android:text="ADD CUSTOMER" />


    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FIELD NAME :"
        android:textStyle="italic"
        android:textColor="#043888" />

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/namee"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:hint="Name"
            android:background="@drawable/custom_edittext" />

        <EditText
            android:id="@+id/surname"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:hint="Surname"
            android:background="@drawable/custom_edittext" />

    </LinearLayout>


    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EMIAL :"
        android:textStyle="italic"
        android:textColor="#043888" />

    <EditText
        android:inputType="textEmailAddress"
        android:id="@+id/emaill"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:hint="email@gmail.com"
        android:background="@drawable/custom_edittext" />


    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADDRESS :"
        android:textStyle="italic"
        android:textColor="#043888" />

    <EditText
        android:id="@+id/address"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:hint="Address"
        android:background="@drawable/custom_edittext" />

    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CONTECT :"
        android:textStyle="italic"
        android:textColor="#043888" />

    <EditText
        android:maxLength="10"
        android:inputType="number"
        android:id="@+id/mobile"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:hint="Mobile Number"
        android:background="@drawable/custom_edittext" />


    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ITEM :"
        android:textStyle="italic"
        android:textColor="#043888" />

    <EditText
        android:id="@+id/item"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:hint="Item Name"
        android:background="@drawable/custom_edittext" />


    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PRICE :"
        android:textStyle="italic"
        android:textColor="#043888" />

    <EditText
        android:inputType="number"
        android:id="@+id/price"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:hint="Enter Amount"
        android:background="@drawable/custom_edittext" />


    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PAYMENT TYPE :"
        android:textStyle="italic"
        android:textColor="#043888" />


    <RadioGroup
        android:layout_marginLeft="15dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioGroup">

        <RadioButton
            android:id="@+id/gave"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text=" You Gave"
            android:checked="false"
            android:textColor="#DA0101"
            android:button="@drawable/custom_radio"
            android:textSize="20dp" />

        <RadioButton
            android:layout_marginLeft="30dp"
            android:id="@+id/got"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text=" You Got"
            android:textColor="#028307"
            android:checked="false"
            android:button="@drawable/custom_radio"
            android:textSize="20dp" />
    </RadioGroup>

    <TextView
        android:layout_marginTop="3dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PAYMENT DATE :"
        android:textStyle="italic"
        android:textColor="#043888" />

    <androidx.cardview.widget.CardView
        android:layout_marginTop="7dp"
        android:layout_width="150dp"
        android:layout_marginLeft="10dp"
        android:layout_height="45dp"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:background="@drawable/ripple"
            android:id="@+id/date"
            android:layout_width="150dp"
            android:layout_height="45dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                add:tint="#004CC1"
                android:src="@drawable/calendar" />

            <TextView
                android:id="@+id/txtdate"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="SET DATE"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:gravity="center" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/dow"
                android:tint="#004CC1"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <Button
        android:id="@+id/add"
        android:layout_marginTop="20dp"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:text="A d d "
        android:layout_gravity="center"
        android:backgroundTint="#043888"/>


        </LinearLayout>

    </ScrollView>

</LinearLayout>











